<Page
    x:Class="GuitarHubCustomer.pgCart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuitarHubCustomer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="background" Background="#FF005FFF">
        <TextBlock x:ConnectionId='2' x:Name="lblCart" HorizontalAlignment="Center" Height="53" Margin="10,31,11,0" Text="Cart" TextWrapping="Wrap" VerticalAlignment="Top" Width="339" FontFamily="Haettenschweiler" FontSize="48" FocusVisualPrimaryBrush="White" FontStyle="Normal" FontWeight="Normal" RequestedTheme="Dark" TextAlignment="Center"/>
        <Button x:ConnectionId='3' x:Name="btnRemoveItem" Content="Remove Item" HorizontalAlignment="Center" Margin="10,422,10,0" VerticalAlignment="Top" Background="#FF5F8EFF" FontFamily="Arial" FontSize="16" Width="340" FocusVisualPrimaryBrush="White" RequestedTheme="Dark" Height="43"/>
        <Button x:ConnectionId='4' x:Name="btnBackToProducts" Content="Back To Products" HorizontalAlignment="Center" Margin="10,587,10,0" VerticalAlignment="Top" Background="Black" FontFamily="Arial" FontSize="16" Width="340" FocusVisualPrimaryBrush="#FFFDFDFE" RequestedTheme="Dark" Height="43" FontWeight="Bold"/>
        <Button x:ConnectionId='5' x:Name="btnCheckout" Content="Checkout" HorizontalAlignment="Center" Margin="10,539,10,0" VerticalAlignment="Top" Background="Black" FontFamily="Arial" FontSize="16" Width="340" FocusVisualPrimaryBrush="#FFFDFDFE" RequestedTheme="Dark" Height="43" FontWeight="Bold"/>
        <TextBlock x:ConnectionId='6' x:Name="lblItemsInCart" HorizontalAlignment="Left" Margin="10,112,0,0" Text="Items In Cart" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" FontWeight="Normal" RequestedTheme="Dark" TextAlignment="Center" Width="340"/>
        <ListBox x:ConnectionId='7' x:Name="lstCart" HorizontalAlignment="Left" Height="261" Margin="0,153,0,0" VerticalAlignment="Top" Background="#FF5F8EFF" FontFamily="Arial" FontSize="25">
            <ListBoxItem Content="Fender Telecaster - 2016 White Opal MX" FontFamily="Arial" FontSize="12" RequestedTheme="Dark"/>
        </ListBox>
    </Grid>
</Page>

